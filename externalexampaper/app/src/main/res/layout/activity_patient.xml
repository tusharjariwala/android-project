  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Name:"
      android:textSize="30dp"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="30dp"
      />
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="enter the name"
          android:layout_marginTop="20dp"
          android:id="@+id/editname"
          android:inputType="text"/>
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select disease :"/>

        <RadioGroup
            android:id="@+id/radioGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radiocholera"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="cholera"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radioFever"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Fever"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:textSize="20dp" />

        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select medication :"/>

        <CheckBox
            android:id="@+id/checknh1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nh1" />

        <CheckBox
            android:id="@+id/checknh20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nh20" />

        <CheckBox
            android:id="@+id/checknh30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nh30" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="arrivalDate:"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter the arrivalDate"
            android:layout_marginTop="20dp"
            android:id="@+id/editarrivaldate"
            android:inputType="date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cost:"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter the cost"
            android:layout_marginTop="20dp"
            android:id="@+id/editcost"
            android:inputType="number"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ADD"
        android:id="@+id/btnadd"
        android:layout_marginStart="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Display"
        android:id="@+id/btndisplay"
        android:layout_marginStart="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Delete"
        android:id="@+id/btndelete"
        android:layout_marginStart="20dp"/>
</LinearLayout>
